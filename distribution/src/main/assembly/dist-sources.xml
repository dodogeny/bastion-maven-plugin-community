<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1
                              http://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>src</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>bastion-maven-plugin-${project.version}-src</baseDirectory>

    <fileSets>
        <!-- Root level files -->
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>pom.xml</include>
                <include>README.md</include>
                <include>.gitignore</include>
            </includes>
        </fileSet>

        <!-- Complete module sources -->
        <fileSet>
            <directory>${project.basedir}/../vulnerability-db</directory>
            <outputDirectory>vulnerability-db/</outputDirectory>
            <includes>
                <include>pom.xml</include>
                <include>src/**/*</include>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>target/**/*</exclude>
                <exclude>*.iml</exclude>
                <exclude>.DS_Store</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/../scanner-core</directory>
            <outputDirectory>scanner-core/</outputDirectory>
            <includes>
                <include>pom.xml</include>
                <include>src/**/*</include>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>target/**/*</exclude>
                <exclude>*.iml</exclude>
                <exclude>.DS_Store</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/../reporting</directory>
            <outputDirectory>reporting/</outputDirectory>
            <includes>
                <include>pom.xml</include>
                <include>src/**/*</include>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>target/**/*</exclude>
                <exclude>*.iml</exclude>
                <exclude>.DS_Store</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/../plugin</directory>
            <outputDirectory>plugin/</outputDirectory>
            <includes>
                <include>pom.xml</include>
                <include>src/**/*</include>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>target/**/*</exclude>
                <exclude>*.iml</exclude>
                <exclude>.DS_Store</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>distribution/</outputDirectory>
            <includes>
                <include>pom.xml</include>
                <include>src/**/*</include>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>target/**/*</exclude>
                <exclude>*.iml</exclude>
                <exclude>.DS_Store</exclude>
            </excludes>
        </fileSet>

        <!-- Site sources -->
        <fileSet>
            <directory>${project.basedir}/../src</directory>
            <outputDirectory>src/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- Build and development tools -->
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>.mvn/**/*</include>
                <include>mvnw</include>
                <include>mvnw.cmd</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- IDE configuration -->
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>.idea/**/*.xml</include>
                <include>.vscode/**/*.json</include>
                <include>.eclipse/**/*</include>
            </includes>
        </fileSet>

        <!-- Docker and CI/CD -->
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>Dockerfile*</include>
                <include>docker-compose*.yml</include>
                <include>.github/**/*</include>
                <include>.gitlab-ci.yml</include>
                <include>Jenkinsfile</include>
            </includes>
        </fileSet>

        <!-- Scripts and tools -->
        <fileSet>
            <directory>${project.basedir}/../scripts</directory>
            <outputDirectory>scripts/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <!-- Build information files will be included from fileSets above -->
</assembly>